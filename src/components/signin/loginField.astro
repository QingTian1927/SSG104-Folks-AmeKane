---
interface Props {
    type: "email" | "password";
    label: string;
    placeholder: string;
    value?: string | undefined;
}

const { type, label, placeholder, value = undefined } = Astro.props;
---

<div
    class="w-full flex flex-col items-start justify-center text-zinc-800 dark:text-zinc-100"
>
    <div class="w-full mb-2 flex items-start justify-between">
        <label for={type} class="grow font-semibold leading-6">{label}</label>
    </div>

    <input
        type={type}
        name={type}
        id={type}
        placeholder={placeholder}
        value={value}
        required
        autocomplete={type === "password" ? "current-password" : "email"}
        class="appearance-none w-full p-3 rounded-md bg-zinc-200 dark:bg-zinc-700 text-zinc-900 dark:text-zinc-50 placeholder:text-zinc-500 dark:placeholder:text-zinc-400 focus:outline focus:outline-cyan-500 dark:focus:outline-blue-700"
    />
</div>
