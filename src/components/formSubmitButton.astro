---
interface Props {
    text: string;
}
const { text } = Astro.props;
---

<div
    class="fixed bottom-0 left-0 w-screen mb-8 lg:hidden flex items-center justify-center"
>
    <button
        type="submit"
        class="w-[50%] py-2 px-4 rounded-md font-medium bg-cyan-500 hover:bg-cyan-600 dark:bg-blue-700 dark:hover:bg-blue-900 text-zinc-800 dark:text-zinc-100"
    >
        {text}
    </button>
</div>
