---
interface Props {
    link: string;
    item: string;
}

const { link, item } = Astro.props;
---

<a
    class="group fixed z-[5] bottom-[80px] lg:bottom-0 right-0 w-20 aspect-square m-4 lg:m-8 lg:mb-12 p-4 rounded-xl flex items-center justify-center bg-cyan-500 hover:bg-cyan-600 dark:bg-blue-700 dark:hover:bg-blue-900"
    href={link}
    title={`Thêm ${item.toLowerCase()} mới`}
>
    <svg
        xmlns="http://www.w3.org/2000/svg"
        width="100%"
        height="2.5rem"
        class="bi bi-plus-lg fill-zinc-800 dark:fill-zinc-100"
        viewBox="0 0 16 16"
    >
        <path
            fill-rule="evenodd"
            d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"
        ></path>
    </svg>
</a>
