---
import type { Tables } from "../../../database/database.types";

interface Props {
    placeholder: string;
    id: string;
    type?: "text" | "number";
    transaction?: Tables<"Transaction">;
}

const { placeholder, id, type = "text", transaction } = Astro.props;
---

{
    id === "description" && (
        <textarea
            id={id}
            name={id}
            placeholder={placeholder}
            class="border-0 w-full min-h-20 lg:min-h-40 p-3 rounded-md bg-zinc-200 dark:bg-zinc-700 text-zinc-900 dark:text-zinc-50 placeholder:text-zinc-500 dark:placeholder:text-zinc-400 focus:outline focus:ring-transparent focus:outline-cyan-500 dark:focus:outline-blue-700"
        >{transaction ? transaction.description : undefined}</textarea>
    )
}

{
    id !== "description" && (
        <input
            type={type}
            id={id}
            name={id}
            placeholder={placeholder}
            required
            value={
                transaction
                    ? type === "text"
                        ? transaction.title
                        : transaction.value
                    : undefined
            }
            min={type === "number" ? "1" : undefined}
            class="border-0 w-full p-3 rounded-md bg-zinc-200 dark:bg-zinc-700 text-zinc-900 dark:text-zinc-50 placeholder:text-zinc-500 dark:placeholder:text-zinc-400 focus:outline focus:ring-transparent focus:outline-cyan-500 dark:focus:outline-blue-700"
        />
    )
}
