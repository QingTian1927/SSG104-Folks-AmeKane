    </div>

    <script define:vars={{ location, linkIdPrefix }}>
        function highlightSidebar() {
            const highlightedLink = document.getElementById(
                `${linkIdPrefix}${location}`
            );
            if (!highlightedLink) {
                return;
            }

            highlightedLink.classList.remove("hover:bg-zinc-700");

            highlightedLink.classList.add(
                "bg-cyan-500",
                "dark:bg-blue-700",
                "hover:bg-cyan-600",
                "dark:hover:bg-blue-800",
                "text-zinc-800",
                "dark:text-zinc-100"
            );
        }
        highlightSidebar();

        const sidebar = document.getElementById("sidebar");

        document
            .getElementById("mobile-sidebar-close-button")
            .addEventListener("click", () => {
                sidebar.classList.remove("flex");
                sidebar.classList.add("hidden");
            });

        function getStyle(element, name) {
            return element.currentStyle
                ? element.currentStyle[name]
                : window.getComputedStyle
                  ? window
                        .getComputedStyle(element, null)
                        .getPropertyValue(name)
                  : null;
        }

        window.addEventListener("resize", (e) => {
            const TAILWIND_LG_BREAKPOINT = 1024;

            const isLandscape = window.innerWidth >= TAILWIND_LG_BREAKPOINT;
            if (isLandscape) {
                sidebar.classList.remove("hidden");
                sidebar.classList.add("flex");
            } else {
                sidebar.classList.remove("flex");
                sidebar.classList.add("hidden");
            }
        });
    </script>
</nav>
