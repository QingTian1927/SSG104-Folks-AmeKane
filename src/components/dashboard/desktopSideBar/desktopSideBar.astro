---
import type { languages } from "../../../i18n/ui";
import { useTranslations } from "../../../i18n/utils";
import NavLink from "./navLink.astro";

interface Props {
    lang?: keyof typeof languages;
    location?: string;
}

const { lang = "vi", location } = Astro.props;
const translate = useTranslations(lang);

const iconSize = "1.25rem";
const linkIdPrefix = "sidebar-";
---

<nav
    class="fixed z-10 w-full lg:w-[300px] h-svh p-4 lg:p-8 hidden lg:flex flex-col items-center justify-start text-zinc-100 bg-zinc-800"
    id="sidebar"
>
    <div class="w-full pb-4 m-0 lg:pb-1 lg:mb-12 flex items-center">
        <a
            href="/"
            class="grow text-2xl lg:text-3xl tracking-wider font-semibold lg:font-bold text-left"
            >Rainboot</a
        >

        <button
            class="group aspect-square block lg:hidden"
            type="button"
            id="mobile-sidebar-close-button"
            title={translate("dashboard.sidebar.close")}
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="1.75rem"
                height="80%"
                class="bi bi-x-lg fill-zinc-100 group-hover:fill-cyan-500 dark:fill-zinc-100 dark:group-hover:fill-blue-700"
                viewBox="0 0 16 16"
            >
                <path
                    d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"
                ></path>
