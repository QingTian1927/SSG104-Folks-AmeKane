        >
            <NavLink
                text={translate("dashboard.nav.home")}
                link="/dashboard"
                id={`${linkIdPrefix}home`}
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width={iconSize}
                    height="100%"
                    fill="currentColor"
