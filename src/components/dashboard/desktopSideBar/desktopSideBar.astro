        <div class="w-full flex flex-col items-center justify-start gap-4">
            <NavLink
                text={translate("dashboard.nav.settings")}
                link="dashboard/settings"
                id={`${linkIdPrefix}settings`}
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width={iconSize}
                    height="100%"
                    fill="currentColor"
                    class="bi bi-gear"
                    viewBox="0 0 16 16"
                >
